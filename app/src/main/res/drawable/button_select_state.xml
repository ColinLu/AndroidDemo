<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--按下状态-->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <!-- 背景颜色 -->
            <solid android:color="#027A0B" />
            <!-- 边框颜色大小 -->
            <stroke android:width="0.5dp" android:color="#027A0B" />
            <!-- 四角半径幅度 -->
            <corners android:radius="7dp" />
        </shape>
    </item>


    <!--不能获取焦点的时候状态-->
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <!-- 背景颜色 -->
            <solid android:color="#45C01A" />
            <!-- 边框颜色大小 -->
            <stroke android:width="0.5dp" android:color="#45C01A" />
            <!-- 四角半径幅度 -->
            <corners android:radius="7dp" />
        </shape>
    </item>

    <!--能获取焦点的时候状态以及默认状态-->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <!-- 背景颜色 -->
            <solid android:color="#A2E08D" />
            <!-- 边框颜色大小 -->
            <stroke android:width="0.5dp" android:color="#A2E08D" />
            <!-- 四角半径幅度 -->
            <corners android:radius="7dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <!-- 背景颜色 -->
            <solid android:color="#A2E08D" />
            <!-- 边框颜色大小 -->
            <stroke android:width="0.5dp" android:color="#A2E08D" />
            <!-- 四角半径幅度 -->
            <corners android:radius="7dp" />
        </shape>
    </item>

</selector>